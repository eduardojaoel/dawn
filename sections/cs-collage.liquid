{{ 'cs-collage.css' | asset_url | stylesheet_tag }}

{% style %}
  /* Layout */
  #cs-{{ section.id }} {
    max-width: {{ section.settings.section_width }}px;
    padding-top: {{ section.settings.padding_top | times: 0.75 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 }}px;
  }
  @media screen and (min-width: 750px) {
    #cs-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Heading */
  #cs-{{ section.id }} .cs-heading {
    font-size: calc(({{ section.settings.body_size }}px * {{ section.settings.heading_size }}) * 0.8);
  }
  @media screen and (min-width: 750px) {
    #cs-{{ section.id }} .cs-heading {
      font-size: calc({{ section.settings.body_size }}px * {{ section.settings.heading_size }});
    }
  }

  /* Text color */
  #cs-{{ section.id }} .cs-grid-item__heading,
  #cs-{{ section.id }} .cs-grid-item__button {
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.body_size }}px;
  }
  /* Placeholder text color */
  #cs-{{ section.id }} .cs-grid-item__heading.cs-no-image,
  #cs-{{ section.id }} .cs-grid-item__button.cs-no-image {
    color: #333;
  }

  /* Grid gap */
  #cs-{{ section.id }} .cs-grid {
    gap: {{ section.settings.grid_gap }}px;
  }

  /* Items border radius */
  #cs-{{ section.id }} .cs-grid-item {
    border-radius: {{ section.settings.grid_border_radius }}px;
  }
{% endstyle %}

<div id="cs-{{ section.id }}" class="cs-container">
  <div class="cs-wrapper">
    {% comment %} Section heading {% endcomment %}
    {% if section.settings.heading != blank %}
      <div class="cs-section-heading">
        <h2 class="cs-heading">{{ section.settings.heading }}</h2>
      </div>
    {% endif %}
    {% comment %} Section grid {% endcomment %}
    <div class="cs-grid cs-grid-size-{{ section.blocks.size }}">
      {% for block in section.blocks %}
        {% if block.settings.heading != blank or block.settings.link != blank %}
          <a
            class="cs-item-wrapper"
            {% if block.settings.link != blank %}
              href="{{ block.settings.link }}"
            {% endif %}
          >
            <div
              class="cs-grid-item {% if section.settings.enable_hover_animation %}cs-hover-animation{% endif %}"
              {{ block.shopify_attributes }}
            >
              {% if block.settings.image != blank %}
                {{
                  block.settings.image
                  | image_url: width: 1000
                  | image_tag:
                    widths: '50, 75, 100, 150, 200, 300, 400, 500, 750, 1000, 1250, 1500',
                    class: 'cs-grid-item__image'
                }}
              {% else %}
                {{ 'image' | placeholder_svg_tag: 'cs-grid-item__image' }}
              {% endif %}
              {% if section.settings.enable_overlay and block.settings.image %}
                <div class="cs-overlay-gradient"></div>
              {% endif %}
              {% if block.settings.heading != blank %}
                <h3 class="cs-grid-item__heading {% unless block.settings.image %}cs-no-image{% endunless %}">
                  {{ block.settings.heading }}
                </h3>
              {% endif %}
              {% if block.settings.link_label != blank %}
                <span class="cs-grid-item__button {% unless block.settings.image %}cs-no-image{% endunless %}">
                  {{- block.settings.link_label -}}
                </span>
              {% endif %}
            </div>
          </a>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

