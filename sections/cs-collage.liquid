  "class": "cs-section cs-collage",
  "tag": "section",
  "max_blocks": 7,
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Título de la sección",
      "default": "Nuestras colecciones"
    },
    {
      "type": "select",
      "id": "heading_size",
      "label": "Tamaño del título",
      "options": [
        {
          "value": "3.0",
          "label": "Extra grande"
        },
        {
          "value": "2.5",
          "label": "Más grande"
        },
        {
          "value": "2.0",
          "label": "Grande"
        },
        {
          "value": "1.7",
          "label": "Mediano"
        },
        {
          "value": "1.4",
          "label": "Pequeño"
        },
        {
          "value": "1.2",
          "label": "Muy pequeño"
        }
      ],
      "default": "2.0"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Color del texto",
      "default": "#fff"
    },
    {
      "type": "checkbox",
      "id": "enable_overlay",
      "label": "Habilitar superposición",
      "default": true,
      "info": "Agrega un degradado sobre las imágenes de los elementos. Sólo se mostrará si cuenta con una imagen."
    },
    {
      "type": "checkbox",
      "id": "enable_hover_animation",
      "label": "Habilitar animación al pasar el cursor",
      "default": true
    },
    {
      "type": "range",
      "id": "grid_gap",
      "label": "Espaciado entre elementos",
      "default": 24,
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "grid_border_radius",
      "label": "Radio de borde de los elementos",
      "default": 8,
      "min": 0,
      "max": 50,
      "step": 1,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "body_size",
      "label": "Tamaño del texto del cuerpo",
      "default": 16,
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "section_width",
      "label": "Ancho de la sección",
      "min": 1000,
      "max": 1800,
      "step": 20,
      "unit": "px",
      "default": 1200
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Espaciado superior",
      "default": 30,
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Espaciado inferior",
      "default": 30,
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Categoría",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Imagen"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Título",
          "default": "Categoría"
        },
        {
          "type": "text",
          "id": "link_label",
          "label": "Texto del botón",
          "default": "Ver más"
        },
        {
          "type": "url",
          "id": "link",
          "label": "URL del botón"
        }
      ]
    }
  ],
  "presets": [
